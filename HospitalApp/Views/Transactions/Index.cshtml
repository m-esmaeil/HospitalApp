@model IEnumerable<HospitalApp.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h3 class="jumbotron p-3 text-center">صفحة قيود اليومية</h3>

<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">اضافة قيد جديد <i class="fas fa-plus-circle"></i></a>
</p>
@if (ViewBag.MSGDel != null)
{
    <h4 class="text-danger">@ViewBag.MSGDel</h4>
}
@if (ViewBag.MSGConfirmDel != null)
{
    <h4 class="text-danger">@ViewBag.MSGConfirmDel</h4>
}
<table class="table table-sm table-striped table-hover text-center" dir="rtl">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                رقم القيد
            </th>
            <th>
                تاريخ انشاء القيد
            </th>
            <th>
                الحساب الرئيسي
            </th>
            <th>
                اسم الحساب
            </th>
            <th>
                مدين
            </th>
            <th>
                دائن
            </th>
            <th>
                الاجراءات
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.entriesSerialize.Serial
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.AccountsTree.Categories.Name
                </td>
                <td>
                    @item.AccountsTree.Name
                </td>
                <td>
                    @item.ValuDebit
                </td>
                <td>
                    @item.ValueCredit
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-pencil-alt"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fas fa-info"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
