@model HospitalApp.Models.AccountsTree

@{
    ViewData["Title"] = "Details";
}


<h3 class="jumbotron p-3 font-calibri text-center text-white font-weight-bold" style="background-color: #4189c7;">تفاصيل الحساب</h3>


<div dir="rtl" class="mx-auto p-3" style="width: 450px; height:250px;">

    <div class="text-right d-flex flex-column shadow p-3 mt-2">
        <!-- Category name-->
        <div class="form-inline mt-3">
            <label asp-for="CategoryId" class="control-label ml-auto font-bold">الحساب الرئيسي</label>
            <input value="@Model.Categories.Name" class="form-control w-50" disabled />
        </div>
        <!-- Follow To Column -->
        <div class="form-inline mt-3">
            <label asp-for="FollowTo" class="control-label ml-auto font-bold">تابع لحساب</label>
            @if (Model.Parent != null)
            {
                <input class="form-control w-50" value="@Model.Parent.Name" disabled />
            }
            else
            {
                <input value="حساب رئيسي" disabled class="form-control w-50" />
            }


        </div>
        <!-- Name Of Account -->
        <div class="form-inline mt-3">
            <label asp-for="Name" class="control-label ml-auto font-bold">اسم الحساب</label>
            <input asp-for="Name" disabled class="form-control w-50" />
        </div>

        <div class="form-inline mt-5 d-flex justify-content-around">
            <a asp-action="Index" class="btn btn-secondary" style="width:45%;">Back to List <i class="fas fa-home"></i></a>
            <a asp-action="Edit" asp-controller="AccountsTree" asp-route-id="@Model.Id" class="btn btn-info" style="width:45%;">Edit <i class="fas fa-pencil-alt"></i></a>
        </div>
    </div>
</div>
