@model HospitalApp.Models.AccountsTree

@{
    ViewData["Title"] = "Details";
}


<h3 class="jumbotron p-3 font-calibri text-center">تفاصيل الحساب</h3>


<div dir="rtl" class="mx-auto p-3" style="width: 450px; height:250px;">

    <div class="text-right d-flex flex-column shadow p-3 mt-2">
        <div class="form-inline mt-3">
            <label class="control-label ml-auto font-bold">الحساب الرئيسي</label>
            <input asp-for="Name" disabled value="@Model.Categories.Name" class="form-control w-50" />
        </div>
        <div class="form-inline mt-3">
            <label class="control-label ml-auto font-bold">تابع لحساب</label>
            <input asp-for="Name" disabled value="@Model.FollowTo" class="form-control w-50" />
        </div>
        <div class="form-inline mt-3">
            <label class="control-label ml-auto font-bold">اسم الحساب</label>
            <input asp-for="Name" disabled value="@Model.Name" class="form-control w-50" />
        </div>

        <div class="form-inline mt-5 d-flex justify-content-around">
            <a asp-action="Index" class="btn btn-secondary" style="width:45%;">Back to List <i class="fas fa-home"></i></a>
            <a asp-action="Edit" asp-controller="AccountsTree" asp-route-id="@Model.Id" class="btn btn-success" style="width:45%;">Edit <i class="fas fa-pencil-alt"></i></a>
        </div>
    </div>
</div>
