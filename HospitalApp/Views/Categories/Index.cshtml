@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h2 class="jumbotron p-3 text-center font-calibri">الحسابات الرئيسية</h2>

<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">انشاء حساب جديد</a>
</p>
<table class="table text-right table-hover table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                <u>اسم الحساب</u>
            </th>
            <th>
                <u>الاجراءات</u>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Are you sure to Delete item ???');" >
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

